<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pale_blue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextAppearance">@style/MenuTextAppearance</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextAppearance</item>
        <!--<item name="android:itemBackground">@color/pale_blue</item>-->
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="android:actionOverflowButtonStyle">@style/AppTheme.OverFlow</item>
    </style>


    <style name="MenuTextAppearance" >
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="AppTheme.OverFlow">
        <item name="android:src">@drawable/notification_icons</item>
    </style>


</resources>
